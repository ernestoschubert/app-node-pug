extends ../layout/admin

block content
    h2(class="text-2xl font-extrabold text-center my-10")= page

    a(href="/myproperties" class="rounded inline-block w-full sm:w-auto uppercase my-5 py-2 px-6 bg-indigo-600 hover:bg-indigo-500 text-sm text-white font-bold text-center") Back

    div(class="mx-auto max-w-6xl bg-white shadow")
        if messages.length 
            ul 
                each message in messages 
                    li(class="border-gray-200 border-b p-5")
                        p(class="font-bold text-gray-800") Email: 
                            span(class="font-normal")= message.user.email
                        p(class="font-bold text-gray-800") Message: 
                            span(class="font-normal")= message.message
                        p(class="font-bold text-gray-800") Received at: 
                            span(class="font-normal")= formatDate(message.createdAt)
        else 
            p(class="text-center text-gray-500 py-5") No Messages
