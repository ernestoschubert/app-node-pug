extends ./layout/app

block content 

            section(class="py-5")
                h2(class="text-center text-4xl font-extrabold pt-10")= page

                if properties.length
                    div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                        each property in properties 
                            include ./templates/card

                else 
                    p(class="text-center text-white py-10") 
                        span(class="bg-gray-600 p-4 rounded") There are no results
