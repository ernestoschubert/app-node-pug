extends ../layout/index

block content
    div
        h1.text-center.text-4xl.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.my-3.text-3xl.font-extrabold #{page}

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-lg= error.msg

        div.mt-8.mx-auto.max-w-md.rounded-lg
            div.bg-white.py-8.px-4.shadow.rounded-lg
                form(method="POST" ACTION="/auth/signup").space-y-4
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='firstName') First Name
                        input#firstName.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='First Name' type='text' name='firstName' value= user ? user.firstName : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='lastName') Last Name
                        input#lastName.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Last Name' type='text' name='lastName' value= user ? user.lastName : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='email') Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Email' type='email' name='email' value= user ? user.email : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='password') Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Password' type='password' name='password')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='repeat_password') Repeat Password
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Repeat Password' type='password' name='repeat_password')
                    div.flex.items-center.justify-between
                        a(href="/auth/signin" class='text-gray-500 text-xs') Do you already have an account? 
                            span.text-blue-500 Sign in
                        a(href="/auth/forgottenpassword" class='text-gray-500 text-xs') Forgotten your password?

                    input(class="w-full bg-cyan-500 hover:bg-cyan-600 cursor-pointer rounded-lg py-2 font-bold text-white" type="submit" value="Create Account")