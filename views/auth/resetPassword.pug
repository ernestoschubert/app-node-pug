extends ../layout/index

block content
    div
        h1.text-center.text-4xl.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.my-3.text-3xl.font-extrabold #{page}

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-lg= error.msg

        div.mt-8.mx-auto.max-w-md.rounded-lg
            div.bg-white.py-8.px-4.shadow.rounded-lg
                form(method="POST").space-y-4
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='password') New password
                        input#password.w-full.px-3.py-2.mb-3.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='New password' type='password' name='password')
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='repeat_password') Repeat password
                        input#repeat_password.w-full.px-3.py-2.mb-3.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Repeat password' type='password' name='repeat_password')

                    input(class="w-full bg-cyan-500 hover:bg-cyan-600 cursor-pointer rounded-lg py-2 font-bold text-white" type="submit" value="Reset Password")