extends ../layout/index

block content
    div
        h1.text-center.text-4xl.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.my-3.text-3xl.font-extrabold #{page}

        div.mt-8.mx-auto.max-w-md.rounded-lg
            div.bg-white.py-8.px-4.shadow.rounded-lg
                form(action="").space-y-4
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='email') Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Email' type='email' name='email')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for='password') Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Password' type='password' name='password')
                    div.flex.items-center.justify-between
                        a(href="/auth/sign-up" class='text-gray-500 text-xs') Not yet registered? 
                            span.text-blue-500 Sign up
                        a(href="/auth/forgotten-password" class='text-gray-500 text-xs') Forgotten your password?

                    input(class="w-full bg-cyan-500 hover:bg-cyan-600 cursor-pointer rounded-lg py-2 font-bold text-white" type="submit" value="Sign in")